---
interface Props {
    title: string;
    text: string;
}

const { title, text } = Astro.props;
---

<div class="sm:flex">
    <div
        class="flex-shrink-0 relative rounded-xl overflow-hidden w-full sm:w-56 h-44"
    >
        <img
            class="group-hover:scale-105 transition-transform duration-500 ease-in-out size-full absolute top-0 start-0 object-cover rounded-xl"
            src="https://images.pexels.com/photos/5875444/pexels-photo-5875444.jpeg"
            alt="Image Description"
        />
    </div><div class="grow mt-4 sm:mt-0 sm:ms-6 px-4 sm:px-0">
        <h3 class="text-xl font-semibold text-white">{title}</h3><p
            class="mt-3 text-gray-400"
        >
            {text}
        </p>
    </div>
</div>
